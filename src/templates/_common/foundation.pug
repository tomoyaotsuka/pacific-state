doctype html
block basetag
block meta
block var
include ./atoms
html(lang='ja')
  head(prefix='og: http://ogp.me/ns#')
    block head
      include ./meta
      block styles
        link(rel='stylesheet' href=`${PATH}/styles/bundle.css`)
      block scripts
        script(src=`${PATH}/scripts/vendor.js` defer)
        script(src=`${PATH}/scripts/modules.js` defer)
      include ./ga
  body(class=`page-${CLASS}` id=`${ID}`)
    block body
      block app
        div.app#app
          block header
            include ../_modules/header
          block contentsWrapper
            main.contents#contents
              block contents
          block footer
            include ../_modules/footer
          block modal
